<header class="header">
    <nav class="navbar navbar-expand-lg navbar-light border-bottom bg-light">
        <div class="container">
            <a class="navbar-brand text-uppercase fw-bold logo-primary" href="/">
                TiMa
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent" style="justify-content: flex-end;">
                {{#if user}}
                <div class="d-flex pb-4 p-sm-0">
                    <a class="text-secondary fw-bold px-4" href="/auth/profile">
                        <i class="fas fa-user"></i>
                    </a>
                    <a class="text-secondary fw-bold px-4" href="/auth/logout">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
                {{else}}
                <div class="nav-btns pb-md-4 px-md-4 p-lg-0 d-flex align-items-center px-4 pb-4">
                    <div>
                        <a href="/auth/login" class="btn nav-btn rounded-pill mx-2">Login</a>
                    </div>
                </div>
                {{/if}}
            </div>
        </div>
    </nav>
</header>