<div class='container d-flex flight-banner py-4'>
  <div class='card p-4'>
    <form action='/flight/search'>
      <div class='d-flex mt-3'>
        <div class='mr-3'>
          <label for='from' class='form-label'>From</label>
          <input name='from' id='from' type='text' class='form-control' placeholder='Los Angeles, USA' />
        </div>
        <div>
          <label for='to' class='form-label'>To</label>
          <input name='to' id='to' type='text' class='form-control' placeholder='Tokyo, Japan' />
        </div>
      </div>
      <div class='d-flex mt-3'>
        <div class='mr-3 w-100'>
          <label for='checkin' class='form-label'>Checkin</label>
          <input name='checkin' id='checkin' type='date' class='form-control w-100' />
        </div>
        <div class='w-100'>
          <label for='checkout' class='form-label'>Checkout</label>
          <input name='checkout' id='checkout' type='date' class='form-control w-100' />
        </div>
      </div>
      <div class='mt-3'>
        <div>
          <label for='flight-class' class='form-label'>Class</label>
          <select name='flight_class' id='flight-class' class='w-100 custom-select custom-select-lg'>
            {{#each seatClass}}
            <option value={{id}}>{{name}}</option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class='d-flex mt-3 justify-content-between flex-row'>
        <div class='mr-3 w-100'>
          <label for='passenger' class='form-label'>Passenger(s)</label>
          <input id='passenger' name='passenger' type="number" value= "1"min="1" >
        </div>
      </div>
      <button type='submit' class='mt-3 w-100 btn btn-primary'>Search Flight</button>
    </form>
  </div>
  <div class='banner'>
    <p>Lorem ipsum dolor sit amet</p>
    <h1>Exclusive Limited Time Offer</h1>
    <h2>Fly to Hong Kong via Los Angeles, USA</h2>
    <h1>$599</h1>
  </div>
</div>